<div class="bs-example">
  </br></br>
  <h2 class="text-left"><b>Listing All Appointments</b></h2>
  <div class="row mx-md-n5">
    <button type="button" class="btn btn-secondary" style="margin-top:-40px;margin-left:90%;height:30px;border-radius: 16px; color:black;font-size:12px;width: 85px;">
      <%= link_to "Pdf Report", :action => "doctor_list", :style => "color:white; text-decoration:none;"%></button>
    <!-- <button type="button" id="add_new_dbtn" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalCenter">
      <%= link_to 'Add new doctor', :controller => :users, :action => "doctor_registration_form", :style => "color:white; text-decoration:none;"%></button> &nbsp -->
  </div><hr>
  <table class="table table-striped" style="margin-top: 1%;">
    <thead class="thead-dark">
      <tr>
        <th>SI No</th>
        <th>Case</th>
        <th>Patient</th>
        <th>Doctor</th>
        <th>Department</th>
      </tr>
    </thead>
    <tbody>
      <% if @appointments.empty?%>
        <p class="alert">Appointments record empty...</p>
      <% else %>
        <% @appointments.each do |appointment| %>
          <td><%=h appointment.id %></td>
          <td><%=h appointment.case %></td>
          <td><%= link_to appointment.patient.first_name+" "+appointment.patient.middle_name+" "+appointment.patient.last_name, :controller => :patients, :action => "details_view_admin", :id => appointment.patient_id%></td>
          <td><%=h appointment.slot.timeslot.doctor.first_name %></td>
          <td><%=h appointment.slot.timeslot.doctor.department.department_name %></td>
          <td><%= link_to 'Destroy', appointment, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
