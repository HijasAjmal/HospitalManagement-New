
<%= stylesheet_link_tag 'form_styles' %>
<div class="container">
  <h2><b>Listing All Doctors</b></h2>
  <a  data-toggle="modal" data-target="#exampleModalCenter">
    Add Doctor
  </a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Contact</th>
        <th>Email</th>
        <th>Department</th>
        <th>Details</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @doctors.each do |d| %>
      <tr>
        <td><%=d.first_name %></td>
        <td><%=d.last_name %></td>
        <td><%=d.contact_number %></td>
        <td><%=d.email %></td>
        <td><%=d.department_id %></td>
        <td><%=link_to 'Details', :action => "show", :id => d.id%></td>
        <td><%=link_to 'Delete', :action => "delete", :id => d.id%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>



<!-- Modal1 -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" height="34px">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Open Registration</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	 <% form_tag({:controller => :users, :action => 'signup', :id => "2" }, {:class => 'user_r'}) do -%>
        	<%= text_field_tag :first_name, params[:first_name], :placeholder => "First Name", :class => "form-control" %>  </br></br>
        	<%= text_field_tag :middle_name, params[:middle_name], :placeholder => "Middle Name", :class => "form-control"%>  </br></br>
        	<%= text_field_tag :last_name, params[:last_name], :placeholder => "Last Name", :class => "form-control", :required => true%>  </br></br>
        	<%= text_field_tag :email, params[:email], :placeholder => "Email", :class => "form-control"%>  </br></br>
          <%= collection_select(:category, :id, Department.all, :id, :department_name) %></br>
      		</br></br><%= submit_tag "Sign Up", :name => nil, :class => "btn btn-primary" %>
    	<% end %>
	</div>
	<div class="modal-footer">



      </div>
    </div>
  </div>
</div>
