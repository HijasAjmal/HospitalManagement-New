<div class="bs-example">
  </br></br>
  <h2 class="text-left"><b>Listing appointments</b></h2>
  <div class="row mx-md-n5">
    <button type="button" class="btn btn-secondary" style="margin-top:-40px;margin-left:90%;height:30px;border-radius: 16px; color:black;font-size:12px;width: 85px;">
      <%= link_to "CSV Report", ("rooms.csv"), :style => "color:white; text-decoration:none;"%></button>
  </div><hr>
  <table class="table table-striped" style="margin-top: 1%;">
    <thead class="thead-dark">
      <tr>
        <th>SI No</th>
        <th>Case</th>
        <th>Date</th>
        <th>Patient</th>
      </tr>
    </thead>
    <tbody>
      <% if @appointments.empty?%>
          <p class="alert">NO appointments today...</p>
      <% else %>
        <% @appointments.each do |appointment| %>
          <td><%=h appointment.id %></td>
          <td><%=h appointment.case %></td>
          <td><%=h appointment.date %></td>
          <td><%= link_to appointment.patient.first_name+" "+appointment.patient.middle_name+" "+appointment.patient.last_name, :controller => :patients, :action => "details_view_doctor", :user_id => appointment.find_user(appointment.patient_id)%></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
