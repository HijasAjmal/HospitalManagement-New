<div class="container border rounded shadow p-4 mb-4 border-secondary w-60" style="margin-top:5%;">

<div class="row panel panel-success" style="margin-top:2%;">
            <div class="panel-heading lead">
                <div class="row">

            </div>
            <div class="panel-body">


                    <div class="row">
                        <div class="col-lg-12 col-md-12">

                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <center>
                                        <span class="text-left" style="margin-left: 5px;">
                                          <%= image_tag findImagedoctor(@user.id), :class => "img-responsive img-thumbnail"%>

                                    </span></center>

                                    <div class="panel">
                                        <table class="table">
                                            <tbody>
                                                        <tr>
                                                        <td class="text-center">
                                                          <button class="btn btn-success btn-block"><%= link_to 'Change', :controller => :photos, :action => "new", :id => @user.id%></button>
                                                        </td>
                                                    </tr>

                                            </tbody>
                                        </table>
                                    </div>


                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <ul class="nav nav-tabs">
                                        <li class="active"><a data-toggle="tab" href="#Details" class="text-success"><i class="fa fa-indent"></i> Details</a></li>
                                        <li><a data-toggle="tab" href="#Appointmenthistory" class="text-success"><i class="fa fa-bookmark-o"></i>Appointment History</a></li>
                                        <li><a data-toggle="tab" href="#Records" class="text-success"><i class="fa fa-home"></i> Records</a></li>
                                    </ul>

                                    <div class="tab-content">
                                        <div id="Details" class="tab-pane  active">

                                            <div class="table-responsive panel">
                                                <table class="table">
                                                    <tbody>

                                                            <tr>
                                                                <td class="text-success"><i class="fa fa-user"></i> Name</td>
                                                                <td><%=@patients.first_name+" "+@patients.middle_name+" "+@patients.last_name%></td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-success"><i class="fa fa-list-ol"></i> Contact Number</td>
                                                                <td><%=@patients.contact_number %></td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-success"><i class="fa fa-list-ol"></i> Email</td>
                                                                <td><%=@patients.email %></td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-success"><i class="fa fa-list-ol"></i> Date Of Birth</td>
                                                                <td><%=@patients.date_of_birth %></td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-success"><i class="fa fa-book"></i> Blood Group</td>
                                                                <td><%=@patients.blood_group %></td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-success"><i class="fa fa-group"></i> Gender</td>
                                                                <td><%=@patients.gender %></td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-success"><i class="fa fa-calendar"></i> Address</td>
                                                                <td><%=@patients.address %></td>
                                                            </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                        <div id="Appointmenthistory" class="tab-pane fade">
                                            <% if @appointments.empty?%>
                                                <h3 style="color: red;">No Recent History<h3>
                                            <% else %>
                                                <div class="table-responsive panel">
                                                    <% @index = 0%>
                                                    <% @appointments.each do |a| %>
                                                        <p>
                                                            <div class="container border rounded shadow mb-4 border-secondary w-100 fontsize" style="text-decoration: none; height: 10%" data-toggle="collapse" href="#collapseExample<%=@index%>" role="button" aria-expanded="false" aria-controls="collapseExample">
                                                                <%= label_tag "Dept:" %>
                                                                <%=h depFind(a) %> &nbsp &nbsp
                                                                <%= label_tag "Dr:" %>
                                                                <%=h docFind(a) %> &nbsp &nbsp
                                                                <%= label_tag "Date:" %>
                                                                <%=h dateFind(a) %> &nbsp &nbsp</br>
                                                                <%= label_tag "Time:" %>
                                                                <%=h timeFind(a) %> &nbsp &nbsp
                                                                <% if a.is_diogonised == 1%>
                                                                    <% @status = "Diognised"%>
                                                                <% else%>
                                                                    <% @status = "Not Diognised"%>
                                                                <% end %>
                                                                <%= label_tag "Status: "+@status %>
                                                            </div>
                                                        </p>
                                                    <% @index = @index+1%>
                                                    <% end %>
                                                </div>
                                            <% end %>
                                        </div>
                                        <div id="Records" class="tab-pane fade">
                                            <% if @report_status == 1%>
                                                <h3 style="color: red;">No Recent Reports<h3>
                                            <% else %>
                                              <div class="table-responsive panel">
                                                  <% @index = 0%>
                                                  <% @reports.each do |report| %>
                                                      <p>
                                                          <div class="container border rounded shadow mb-4 border-secondary w-100 fontsize" style="text-decoration: none; height: 10%" data-toggle="collapse" href="#collapseExample<%=@index%>" role="button" aria-expanded="false" aria-controls="collapseExample">
                                                              <%= label_tag "Title:" %>
                                                              <%=h report.title %> &nbsp &nbsp
                                                              <%= label_tag "File Type:" %>
                                                              <%=h report.file_content_type %> &nbsp &nbsp
                                                              <%= label_tag "Date:" %>
                                                              <%=h report.created_at.strftime("%Y/%m/%d") %> &nbsp &nbsp</br>
                                                              <%= label_tag "File Name:" %>
                                                              <%=h report.file_file_name %> &nbsp &nbsp
                                                              <%= link_to 'Download', findFile(report.file.url)%>
                                                          </div>
                                                      </p>
                                                  <% @index = @index+1%>
                                                  <% end %>
                                              </div>

                                          </div>
                                          <% end %>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                <!-- /.table-responsive -->
                <button type="button" class="apbutton" data-toggle="modal" data-target="#exampleModalCenter">
                  <span><p>Take Appointment</p></span>
                </button>
                <!-- <button class="apbutton"><%= link_to '<span><p>Take Appointment</p></span>', :controller => :timeslots, :action => "index", :style => "text-decoration: none;"%></button> -->

            </div>
        </div>
      </div>




      <!-- Modal1 -->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content" height="34px">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalCenterTitle">Confirm</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <!-- <%= link_to 'confirm', :controller => :timeslots%> -->
             	 <% form_tag :controller => :patients, :action => 'searchslots' do -%>
              	<%= date_select(:date, :date, :required => true, :include_blank => true)%></br></br></br>
                <%= select_time(Time.now, :prefix => "start_time") %>
                <%= collection_select(:department, :id, Department.all, :id, :department_name)%>
              </br></br><%= submit_tag "Find", :name => nil, :class => "btn btn-primary" %>
          	<% end %>
      	</div>
      	<div class="modal-footer">
            </div>
          </div>
        </div>
      </div>
