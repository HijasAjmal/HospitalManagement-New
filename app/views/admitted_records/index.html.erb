<div class="bs-example">
  </br></br>
  <h2 class="text-left"><b>Listing All Records</b></h2>
  <div class="row mx-md-n5">
  </div><hr>
  <table class="table table-striped" style="margin-top: 1%;">
    <thead class="thead-dark">
      <th>SI:No</th>
      <th>Patient Name</th>
      <th>Admitted date</th>
      <th>Admitted Time</th>
      <th>Is_Discharged</th>
      <th>Discharged Date</th>
      <th>Discharged Time</th>
    </tr>
    </thead>
    <tbody>
      <% if @admitted_records.empty? %>
        <p class="alert">No Records</p>
      <% else %>
        <% @admitted_records.each do |record| %>
        <tr>
          <td><%= h record.id %></td>
          <td><%= record.find_patient(record.patient_id) %></td>
          <td><%= h record.date%></td>
          <td><%= h record.time%></td>
          <td><%= record.find_option(record.is_discharged) %></td>
          <td><%= h record.discharged_date %></td>
          <td><%= h record.discharged_time %></td>
          <% if record.find_option(record.is_discharged) != "Yes" %>
            <td><%= link_to 'Discharge Patient', :controller => :admitted_records, :action => "discharge_patient", :id => record.id %></td>
          <% end %>
          <td></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
