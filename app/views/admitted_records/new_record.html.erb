<div class="container border w-50" style="height: 50%; margin-top: 6%;">
  	<% form_tag({:action => 'create_record', :id => params[:id]}, {:class => 'user_r'}) do -%>
     	<div class="text-center">
      	<h3>Create Record</h3>
    	</div></hr></br>
      <%= hidden_field :patient_id, params[:patient_id], :value => @comment.appointment.patient.id%>
    	<div class="form-row">
      	<div class="form-group col-md-6">
        		<label >Department Name</label>
        		<%= text_field_tag :department_name, params[:department_name], :value => @comment.appointment.slot.timeslot.doctor.department.department_name, :disabled => true, :class => "form-control"%>
      	</div>
      	<div class="form-group col-md-6">
        		<label >Recommended Doctor</label>
        		<%= text_field_tag :doctor, params[:doctor], :value => @comment.appointment.slot.timeslot.doctor.first_name+" "+@comment.appointment.slot.timeslot.doctor.middle_name+" "+@comment.appointment.slot.timeslot.doctor.last_name, :disabled => true, :class => "form-control" %>
      	</div>
      </div></br></br>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label >Room Id</label>
          <%= collection_select(:room, :id, @comment.appointment.slot.timeslot.doctor.department.rooms, :id, :id, {:include_blank => 'SELECT ROOM'}, {:onchange => "list_bed(this.value);"})%>
        </div>
      </div>
      <div id="bedlistform">



      </div></br></br>
    <% end %>
</div>
