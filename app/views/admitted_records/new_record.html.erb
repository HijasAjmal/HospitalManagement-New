<div class="container border w-50" style="height: 40%; margin-top: 6%;">
  	<% form_tag({:action => 'create_record', :id => params[:id]}, {:class => 'user_r'}) do -%>
   	<div class="text-center">
    	<h3>Create Record</h3>
  	</div></hr></br>
    <%= hidden_field :patient_id, params[:patient_id], :value => @patient.id%>
  	<div class="form-row">
    	<div class="form-group col-md-6">
      		<label >Department Name</label>
      		<%= text_field_tag :department_name, params[:department_name], :value => @department.department_name, :disabled => true, :class => "form-control"%>
    	</div>
    	<div class="form-group col-md-6">
      		<label >Recommended Doctor</label>
      		<%= text_field_tag :doctor, params[:doctor], :value => @doctor.first_name+" "+@doctor.middle_name+" "+@doctor.last_name, :disabled => true, :class => "form-control" %>
    	</div>
  </div></br></br>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label >Room Id</label>
      <%= collection_select :room, :id, @rooms, :id, :id%>
    </div>
    <div class="form-group col-md-6">
      <label >Bed No:</label>
    	<%= collection_select :bed_id, :id, @beds, :id, :id, :class => "dropdownmenu"%>
    </div>
  </div></br></br>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label >Date</label>
      <%= text_field_tag :date, params[:date], :value => Time.now.strftime("%d:%m:%y"), :disabled => true, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <label >Time</label>
    	<%= text_field_tag :time, params[:time], :value => Time.now.strftime("%H:%M%p"), :disabled => true, :class => "form-control" %>
    </div>
  </div></br></br>
</br></br><%= submit_tag "Create Record", :name => nil, :class => "btn btn-primary recbtn" %>
<% end %>
</div>
