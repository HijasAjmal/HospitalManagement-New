<h1>Editing comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :patient_condition %><br />
    <%= f.text_field :patient_condition %>
  </p>
  <p>
    <%= f.label :medication %><br />
    <%= f.text_field :medication %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>