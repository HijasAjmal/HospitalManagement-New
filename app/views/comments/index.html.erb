<% if @recommendations.present?%>
   <%= render :partial => "recommended_records"%>
<%else%>
  <div class="bs-example">
    </br></br>
    <h2 class="text-left"><b>Listing All Recommendations</b></h2>
    <div class="row mx-md-n5">
      <button type="button" class="btn btn-secondary" style="margin-top:-40px;margin-left:90%;height:30px;border-radius: 16px; color:black;font-size:12px;width: 85px;">
        <%= link_to "Pdf Report", :action => "doctor_list", :style => "color:white; text-decoration:none;"%></button>
      <!-- <button type="button" id="add_new_dbtn" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalCenter">
        <%= link_to 'Add new doctor', :controller => :users, :action => "doctor_registration_form", :style => "color:white; text-decoration:none;"%></button> &nbsp -->
    </div><hr>
    <table class="table table-striped" style="margin-top: 1%;">
      <thead class="thead-dark">
        <tr>
          <th>SI:No</th>
          <th>Patient condition</th>
          <th>Medication</th>
          <th>Recommended</th>
        </tr>
      </thead>
      <tbody>
        <% if @comments.nil?%>
          <p class="alert">No recommendations</p>
        <% else %>
          <% @comments.each do |comment| %>
          <tr>
            <td><%=h comment.id %></td>
            <td><%= PatientCondition.find_patient_condition(comment.patient_condition) %></td>
            <td><%=h comment.medication %></td>
            <td><%= comment.find_option(comment.is_recommended) %></td>
            <% if comment.is_recommended == 1 %>
              <td><%= link_to 'Alot the Room', :controller => :admitted_records, :action => "new_record", :id => comment.id%></td>
            <% else %>
              <td></td>
            <% end %>
            <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
