<%= stylesheet_link_tag 'form_styles' %>
<div class="container">
  <h2><b>Listing All Admin Records</b></h2>
  <a  data-toggle="modal" data-target="#exampleModalCenter">
    Add New Admin
  </a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Contact</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @admin.each do |a| %>
      <tr>
        <td><%=a.first_name %></td>
        <td><%=a.last_name %></td>
        <td><%=a.contact_number %></td>
        <td><%=a.email %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


<!-- Modal1 -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" height="34px">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Open Registration</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <% form_tag({:controller => :users, :action => 'signup', :id => "1" }, {:class => 'user_r'}) do -%>
          <%= text_field_tag :first_name, params[:first_name], :placeholder => "First Name", :class => "form-control", :minlength => 3, :required => true %>  </br></br>
          <%= text_field_tag :middle_name, params[:middle_name], :placeholder => "Middle Name", :class => "form-control"%>  </br></br>
          <%= text_field_tag :last_name, params[:last_name], :placeholder => "Last Name", :class => "form-control", :required => true %>  </br></br>
          <%= text_field_tag :email, params[:email], :placeholder => "Email", :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', :required => true, :class => "form-control"%>  </br></br>
          </br></br><%= submit_tag "Create Admin", :name => nil, :class => "btn btn-primary" %>
      <% end %>
  </div>
  <div class="modal-footer">



      </div>
    </div>
  </div>
</div>
